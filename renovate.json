{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base", "schedule:weeklyMonday"],
  "semanticCommits": "enabled",
  "commitMessagePrefix": "chore(deps):",
  "groupName": "dependencies",
  "rangeStrategy": "auto",
  "automerge": true,
  "automergeType": "pr",
  "automergeStrategy": "squash",
  "majorVersionConstraint": "auto",
  "minorVersionConstraint": "auto",
  "patchVersionConstraint": "auto",
  "vulnerabilityAlerts": {
    "labels": ["security"],
    "automerge": false
  }
}
